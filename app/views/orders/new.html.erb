<div class="container">

  <div class="card mx-auto mt-5 p-3" style="width: 30rem; border-radius: 10px;">
    <h1 class="text-center mb-4">Rent island</h1>
    <div id="rent">
      <form action=<%= island_orders_path %> method="post" >

        <div class="w-75 mx-auto">
            <div class="input-group">
              <span class="input-group-text" id="start-date-label">From:</span>
              <input type="text" name="checkin" class="form-control" required autocomplete="off" aria-label="start-date" aria-described-by="start-date-label" placeholder="<%= Date.today.strftime("%d/%m/%Y") %>">
            </div>
            <div class="input-group mt-3">
              <span class="input-group-text" id="start-date-label">To:</span>
              <input type="text" name="checkin" class="form-control" required autocomplete="off" aria-label="start-date" aria-described-by="start-date-label" placeholder="<%= (Date.today + 30).strftime("%d/%m/%Y")  %>">
            </div>
        </div>
        <div class="text-center">
          <input type="submit" class="btn btn-primary mt-4">
        </div>
      </form>
    </div>
  </div>

</div>
