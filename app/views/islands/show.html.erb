<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('http://cdn.cnn.com/cnnnext/dam/assets/180219103122-zanzibar-and-its-islands---mnemba-a-view-from-the-sky-mnemba-island-lodge.jpg');">
  <%# mudar a foto da ilha no banner para a foto do card %>
  <div class="container">
    <h1><%= @island.name %></h1>
  </div>
</div>

<div class="container mb-5">
  <div class="container mb-5 d-flex justify-content-between my-4">
    <div>
      <% if #usuário existe e está logado vai pro show de orders %>
        <button type="button" class="btn btn-flat" id="new_movie" data-bs-toggle="modal" data-bs-target="#new_movie_modal">
          comprar ilha
        </button>
      <% else #não logado vai pra pagina de login/registro %>

      <% end %>
      <% if policy(@island).edit? %>
        <%= link_to "Edit this island", edit_island_path(@island) %> |
      <% end %>
      <%= button_to "Destroy this island", @island, class: "btn btn-cancel text-danger",  data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } if policy(@island).destroy? %>
    </div>
  </div>
</div>


