<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('http://cdn.cnn.com/cnnnext/dam/assets/180219103122-zanzibar-and-its-islands---mnemba-a-view-from-the-sky-mnemba-island-lodge.jpg');">
  <%# mudar a foto da ilha no banner para a foto do card %>
  <div class="container">
    <h1><%= @island.name %></h1>
    <p>Location: <%=@island.location %></p>
  </div>
</div>

<div class="container mb-5">
  <div class="container d-flex justify-content-between my-4">
    <% if @island.user == current_user %>
      <%= link_to "Edit this island", edit_island_path(@island) %>
      <%= link_to "Destroy this island", @island, class: "btn btn-cancel text-danger",  data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } %>
    <% end %>
  </div>

  <% if @island.user != current_user %>
    <div class="island bg-white p-5 rounded">
      <div class="row">
        <div class="island-infos col-sm-6">
          <p><strong>Hosted by: </strong><%= @island.user.name %></p>
          <hr>
          <p><strong>Description</strong><br><%= @island.description %></p>
        </div>

        <div class="col-sm-6">
          <div class="card shadow-sm">
            <div class="card-body">
              <h5 class="card-title">R$ <%= @island.price %> per night</h5>
              <p class="card-text">calend√°rio</p>
              <a href="#" class="btn btn-primary">Rent <%= @island.name %></a>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <div class="island-infos bg-white p-5">
      <p><strong>Hosted by: </strong><%= @island.user.name %></p>
      <hr>
      <p><strong>Description</strong><br><%= @island.description %></p>
    </div>
  <% end %>
</div>
